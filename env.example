# ===========================================
# CONFIGURACIÓN DEL SERVIDOR
# ===========================================
NODE_ENV=development
PORT=3001
API_VERSION=v1

# ===========================================
# CONFIGURACIÓN DE BASE DE DATOS
# ===========================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=tracker
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_DIALECT=postgres
DB_LOGGING=false

# ===========================================
# CONFIGURACIÓN DE HEADLESSX
# ===========================================
HEADLESSX_URL=http://localhost:3000
HEADLESSX_TOKEN=your_secure_token_here
HEADLESSX_TIMEOUT=60000

# ===========================================
# CONFIGURACIÓN DE AUTENTICACIÓN
# ===========================================
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=your_refresh_token_secret_here
REFRESH_TOKEN_EXPIRES_IN=30d

# ===========================================
# CONFIGURACIÓN DE RATE LIMITING
# ===========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# ===========================================
# CONFIGURACIÓN DE LOGGING
# ===========================================
LOG_LEVEL=info
LOG_FILE=logs/app.log
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14d

# ===========================================
# CONFIGURACIÓN DE CORS
# ===========================================
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# ===========================================
# CONFIGURACIÓN DE COMPRESIÓN
# ===========================================
COMPRESSION_ENABLED=true
COMPRESSION_LEVEL=6

# ===========================================
# CONFIGURACIÓN DE MONITOREO
# ===========================================
MONITORING_ENABLED=true
HEALTH_CHECK_INTERVAL=30000

# ===========================================
# CONFIGURACIÓN DE LIMPIEZA AUTOMÁTICA
# ===========================================
CLEANUP_ENABLED=true
CLEANUP_SCHEDULE=0 2 * * *
MAX_VERSIONS_PER_COMPETITOR=30
FULL_VERSION_INTERVAL=10

# ===========================================
# CONFIGURACIÓN DE WEBHOOKS (OPCIONAL)
# ===========================================
WEBHOOK_SECRET=your_webhook_secret_here
WEBHOOK_URL=https://your-frontend.com/api/webhooks

# ===========================================
# CONFIGURACIÓN DE REDIS (OPCIONAL)
# ===========================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# ===========================================
# CONFIGURACIÓN DE EMAIL (OPCIONAL)
# ===========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
SMTP_FROM=Competitor Tracker <noreply@competitortracker.com>
